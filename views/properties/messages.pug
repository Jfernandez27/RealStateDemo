extends ../layout/admin
block styles 

block container
    div.py-10
        h2.text-center.text-2xl.font-extrabold= title

        a(href="/myProperties" class="rounded py-2 bg-indigo-600 hover:bg-indigo-700 text-sm px-10 font-bold text-center text-white uppercase my-5 inline-block w-full sm:w-auto") Volver

        //- pre= JSON.stringify(messages, undefined, 2)
        div(class="mx-auto max-w-4xl bg-white shadow ")

            if messages.length
                ul 
                    each message in messages
                        li(class="border-gray-200 border-b p-5")
                            p(class="font-bold text-gray-800") Nombre: 
                                span(class="font-normal")= message.user.name
                            p(class="font-bold text-gray-800") Email: 
                                span(class="font-normal")= message.user.email
                            p(class="font-bold text-gray-800") Mensaje: 
                                span(class="font-normal")= message.text
                            p(class="font-bold text-gray-800") Enviado: 
                                span(class="font-normal")= dateFormat(message.createdAt)

            else 
                p(class="text-center text-gray-600 p-5") No hay Mensajes

        if errors
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
